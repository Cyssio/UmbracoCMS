@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@{
	Layout = "mainLayout.cshtml";
	ViewBag.Title = Model?.Value("pageTitle") ?? null;

    var onatrixImage = Model?.Value<IPublishedContent>("headerOnatrixImage")?.Url() ?? "";
	var heroImage = Model?.Value<IPublishedContent>("heroImg")?.Url() ?? "";
    var signatureImage = Model?.Value<IPublishedContent>("aboutSignatureImage")?.Url() ?? "";

    var riskManagementImage = Model?.Value<IPublishedContent>("serviceOneCardImage")?.Url() ?? "";
	var bondsCommImage = Model?.Value<IPublishedContent>("serviceTwoCardImage")?.Url() ?? "";
    var assuranceImage = Model?.Value<IPublishedContent>("serviceThreeCardImage")?.Url() ?? "";
    var taxTrustImage = Model?.Value<IPublishedContent>("serviceFourCardImage")?.Url() ?? "";
	var financialImage = Model?.Value<IPublishedContent>("serviceFiveCardImage")?.Url() ?? "";
    var statisticsImage = Model?.Value<IPublishedContent>("serviceSixCardImage")?.Url() ?? "";

    var chooseImage = Model?.Value<IPublishedContent>("chooseImage")?.Url() ?? "";
    
    var successImage = Model?.Value<IPublishedContent>("successImage")?.Url() ?? "";

    var pjOneImage = Model?.Value<IPublishedContent>("projectCardImageOne")?.Url() ?? "";
    var pjTwoImage = Model?.Value<IPublishedContent>("projectCardImageTwo")?.Url() ?? "";
	var pjThreeImage = Model?.Value<IPublishedContent>("projectCardImageThree")?.Url() ?? "";
    var pjFourImage = Model?.Value<IPublishedContent>("projectCardImageFour")?.Url() ?? "";

    var partnerOneImage = Model?.Value<IPublishedContent>("partnerImageOne")?.Url() ?? "";
	var partnerTwoImage = Model?.Value<IPublishedContent>("partnerImageTwo")?.Url() ?? "";
    var partnerThreeImage = Model?.Value<IPublishedContent>("partnerImageThree")?.Url() ?? "";
    var partnerFourImage = Model?.Value<IPublishedContent>("partnerImageFour")?.Url() ?? "";
	var partnerFiveImage = Model?.Value<IPublishedContent>("partnerImageFive")?.Url() ?? "";
    var partnerSixImage = Model?.Value<IPublishedContent>("partnerImageSix")?.Url() ?? "";  
}

<header>
        <div class="top-bar">
            <p>@Model?.Value("headerAddressText")</p>
            <div class="socials">
                <a class="fb" href="#"><i class="fa-brands fa-facebook-f"></i></a>
                <a class="x" href="#"><i class="fa-brands fa-x-twitter"></i></a>
                <a class="linkedin" href="#"><i class="fa-brands fa-linkedin-in"></i></a>
            </div>
        </div>

        <div class="container">

            <div class="nav-bar">
                <a href="@Model?.Value("headerHomeNavUrl")">
                    <img src="@onatrixImage" alt="Brand name: Onatrix">
                </a>

                <div class="navigation">
                    <a href="@Model?.Value("headerAboutNavUrl")"><h4>@Model?.Value("headerAboutNavText")</h4></a>
                    <a href="@Model?.Value("headerServicesNavUrl")"><h4>@Model?.Value("headerServiceNavText")</h4></a> 
                    <a href="@Model?.Value("headerProjectsNavUrl")"><h4>@Model?.Value("headerProjectsNavText")</h4></a>
                    <a href="@Model?.Value("headerContactNavText")"><h4>@Model?.Value("headerContactNavText")</h4></a>
                </div>

                <p><i class="fa-solid fa-magnifying-glass"></i></p>
            </div>

        </div>
</header>


<main> 

    <section class="hero">
        <img src="@heroImage" alt="">

        <div class="container">
                <h2>@Model?.Value("heroHeadline")</h2>
        	    <p>@Model?.Value("heroText")</p>
                <button>@Model?.Value("heroButton")</button>
        </div>
    </section>

    <section class="about-us">
        <div class="container">  
            <div class="au-title">
                <p>@Model?.Value("aboutSectionTitle")</p>
                <h3>@Model?.Value("aboutHeadline")</h3>
            </div>
            <div class="au-content">
                <p class="au-text">@Model?.Value("aboutQuote")</p>
                <p>@Model?.Value("aboutText")</p>
                <img src="@signatureImage" alt="@Model?.Value("aboutSignature")">
                <p>@Model?.Value("aboutSignature")</p>
            </div>
                    
            <div class="call-back">
                <h5>@Model?.Value("aboutFormHeadline")</h5>
                <p>@Model?.Value("aboutFormText")</p>
                <form class="au-form">
                    <input placeholder="@Model?.Value("aboutInputName")" required>
                    <input placeholder="@Model?.Value("aboutInputEmail")" required>
                    <input placeholder="@Model?.Value("aboutInputPhone")" required>
                    <select>
                        <option>@Model?.Value("aboutSelectOptionOne")</option>
                        <option>@Model?.Value("aboutSelectOptionTwo")</option>
                        <option>@Model?.Value("aboutSelectOptionThree")</option>
                    </select>
                    <button>@Model?.Value("aboutButton")</button>
                </form>
            </div>
            
        </div>
    </section>

    <section class="our-services">
            <div class="container">
                <div class="os-title">
                    <p>@Model?.Value("serviceSectionTitle")</p>
                    <h3>@Model?.Value("serviceHeadline")</h3>
                    <h3>@Model?.Value("serviceHeadlineTwo")</h3>
                </div>
                <div class="os-cards">
                    <div>
                        <h5>@Model?.Value("servicesOneCardHeadline")</h5>
                        <img src="@riskManagementImage" alt="">
                        <p>@Model?.Value("serviceOneCardText")</p>
                    </div>
                    <div>
                        <h5>@Model?.Value("serviceTwoCardHeadline")</h5>
                        <img src="@bondsCommImage" alt="">
                        <p>@Model?.Value("serviceTwoCardText")</p>
                    </div>
                    <div>
                        <h5>@Model?.Value("serviceThreeCardHeadline")</h5>
                        <img src="@assuranceImage" alt="">
                        <p>@Model?.Value("serviceThreeCardText")</p>
                    </div>
                    <div>
                        <h5>@Model?.Value("serviceFourCardHeadline")</h5>
                        <img src="@taxTrustImage" alt="">
                        <p>@Model?.Value("serviceFourCardText")</p>  
                    </div>
                    <div>
                        <h5>@Model?.Value("serviceFiveCardHeadline")</h5>
                        <img src="@financialImage" alt="">
                        <p>@Model?.Value("serviceFiveCardText")</p>
                    </div>
                    <div>
                        <h5>@Model?.Value("serviceSixCardHeadline")</h5>
                        <img src="@statisticsImage" alt="">
                        <p>@Model?.Value("serviceSixCardText")</p>
                    </div>
                </div>
            </div>
    </section>

    <section class="choose-us">
        <div class="container">
            <h3>@Model?.Value("chooseHeadline")</h3>
            <h3 class="four-clients">@Model?.Value("chooseHeadlineTwo")</h3>
            <p>@Model?.Value("chooseText")</p>
            <button>@Model?.Value("chooseButton")</button>
            <img src="@chooseImage" alt="">
        </div>
    </section>

    <section class="success-story">
        <div class="container">
                <div class="success-title">
                    <p>@Model?.Value("successSectionTitle")</p>
                    <h2>@Model?.Value("successHeadline")</h2>
                </div>
                <div class="story-achievements">
                    <div>
                        <h1>@Model?.Value("successStoryHeadline")</h1>
                        <p>@Model?.Value("successStoryText")</p>
                    </div>
                    <div>
                        <h1>@Model?.Value("successStoryHeadlineTwo")</h1>
                        <p>@Model?.Value("successStoryTextTwo")</p>
                    </div>
                    <div>
                        <h1>@Model?.Value("successStoryHeadlineThree")</h1>
                        <p>@Model?.Value("successStoryTextThree")</p>
                    </div>
                </div>

            <img src="@successImage" alt="">  

        </div>
    </section>

    <section class="our-projects">
        <div class="container">
            <div class="op-title">
                <p>@Model?.Value("projectSectionTitle")</p>
                <h3>@Model?.Value("projectHeadline")</h3>
            </div>
        </div>
            <div class="op-cards">
                <div>
                    <img src="@pjOneImage" alt="">
                    <h6>@Model?.Value("projectCardHeadlineOne")</h6>
                    <p>@Model?.Value("projectCardTextOne")</p>
                </div>
                <div>
                    <img src="@pjTwoImage" alt="">
                    <h6>@Model?.Value("projectCardHeadlineTwo")</h6>
                    <p>@Model?.Value("projectCardTextTwo")</p>
                </div>
                <div>
                    <img src="@pjThreeImage" alt="">
                    <h6>@Model?.Value("projectCardHeadlineThree")</h6>
                    <p>@Model?.Value("projectCardTextThree")</p>
                </div>
                <div>
                    <img src="@pjFourImage" alt="">
                    <h6>@Model?.Value("projectCardHeadlineFour")</h6>
                    <p>@Model?.Value("projectCardTextFour")</p>
                </div>
            </div>        
    </section>

    <section class="partners">
        <div class="container">
            <img src="@partnerOneImage" alt="">
            <img src="@partnerTwoImage" alt="">
            <img src="@partnerThreeImage" alt="">
            <img src="@partnerFourImage" alt="">
            <img src="@partnerFiveImage" alt="">
            <img src="@partnerSixImage" alt="">
        </div>
    </section>
</main>

<footer>
    <div class="container">
        <p>@Model?.Value("footerHeadline")</p>
        <p class="f-yellow">@Model?.Value("footerHeadlineTwo")</p>
    </div>
</footer>